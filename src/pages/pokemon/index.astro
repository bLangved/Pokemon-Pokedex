---
import '/src/css/style.css';
---

<!doctype html>
<html lang="en">
  <head>
    <title>Pokedex | Selected Pokemon</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href="data:;base64,iVBORw0KGgo=" />
  </head>

  <body id="selectedPokemon">
    <header>
      <div class="bannerContainer">
        <a href="/">
          <h1 class="banner-title">Langveds</h1>
          <div class="banner-logo"></div>
        </a>
      </div>
      <div class="themeToggle-container">
        <span class="theme-text">Light theme</span>
        <button class="toggle-theme"></button>
      </div>
    </header>

    <main>
      <h1 class="title_selectedPokemon">Selected Pokemon</h1>
      <div class="pokemonId_selectedPokemon"></div>

      <div class="contentContainer contentContainer_selectedPokemon">
        <div class="loadingContainer">
          <p class="loadingText">Loading Pokemon...</p>
          <div id="loadingAnimation"></div>
        </div>

        <div class="errorMessageContainer">
          <div class="errorMessage"></div>
        </div>

        <div class="pokemonContainer"></div>
      </div>
    </main>

    <script src="/src/js/components/themeToggle.js" defer></script>
    <script src="/src/js/components/activeSite.js" defer></script>
    <script src="/src/js/components/displayError.js" defer></script>
    <script type="module" src="/src/js/fetchData/fetch-selectedpokemon.js"
    ></script>
  </body>
</html>
